{
  "name": "craft-agent",
  "version": "0.4.5",
  "description": "Claude Code-like agent for Craft documents",
  "type": "module",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "electron",
      "electron-winstaller",
      "esbuild"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "!apps/online-docs"
  ],
  "scripts": {
    "test": "npx tsx --test",
    "typecheck": "cd packages/shared && npx tsc --noEmit",
    "typecheck:all": "cd packages/core && npx tsc --noEmit && cd ../shared && npx tsc --noEmit",
    "lint:electron": "cd apps/electron && npx eslint .",
    "lint:shared": "cd packages/shared && npx eslint .",
    "lint": "pnpm run lint:electron && pnpm run lint:shared",
    "electron:clean": "npx tsx scripts/electron-clean.ts",
    "electron:build:main": "npx tsx scripts/electron-build-main.ts",
    "electron:build:preload": "npx tsx scripts/electron-build-preload.ts",
    "electron:build:renderer": "npx tsx scripts/electron-build-renderer.ts",
    "electron:build:resources": "npx tsx scripts/electron-build-resources.ts",
    "electron:build:assets": "cd apps/electron && npx tsx scripts/copy-assets.ts",
    "electron:build": "pnpm run electron:build:main && pnpm run electron:build:preload && pnpm run electron:build:renderer && pnpm run electron:build:resources && pnpm run electron:build:assets",
    "electron:start": "pnpm run electron:build && electron apps/electron",
    "electron:dev": "npx tsx scripts/electron-dev.ts",
    "electron:dev:terminal": "npx tsx scripts/electron-dev.ts --terminal",
    "fresh-start": "npx tsx scripts/fresh-start.ts",
    "fresh-start:token": "npx tsx scripts/fresh-start.ts --token-only",
    "print:system-prompt": "npx tsx packages/shared/src/prompts/print-system-prompt.ts",
    "electron:dist": "pnpm run electron:build && electron-builder --config electron-builder.yml --project apps/electron",
    "electron:dist:mac": "pnpm run electron:build && electron-builder --config electron-builder.yml --project apps/electron --mac",
    "electron:dist:win": "pnpm run electron:build && electron-builder --config electron-builder.yml --project apps/electron --win",
    "electron:dist:linux": "pnpm run electron:build && electron-builder --config electron-builder.yml --project apps/electron --linux",
    "viewer:dev": "vite dev --config apps/viewer/vite.config.ts",
    "viewer:build": "vite build --config apps/viewer/vite.config.ts",
    "viewer:preview": "vite preview --config apps/viewer/vite.config.ts",
    "marketing:dev": "vite dev --config apps/marketing/vite.config.ts",
    "marketing:build": "vite build --config apps/marketing/vite.config.ts",
    "marketing:preview": "vite preview --config apps/marketing/vite.config.ts",
    "docs:dev": "cd apps/online-docs && npm install && npx mintlify dev",
    "build": "npx tsx scripts/build.ts",
    "release": "npx tsx scripts/release.ts",
    "check-version": "npx tsx scripts/check-version.ts",
    "oss:sync": "npx tsx scripts/oss-sync.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.947.0",
    "@electron/packager": "^19.0.1",
    "@rollup/rollup-win32-arm64-msvc": "^4.55.1",
    "@sentry/vite-plugin": "^4.8.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/linkify-it": "^5.0.0",
    "@types/node": "^25.0.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/semver": "^7.7.1",
    "@types/shell-quote": "^1.7.5",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "openai": "^6.18.0",
    "postcss": "^8.5.6",
    "react-devtools-core": "^6.1.1",
    "tailwindcss": "^4.1.18",
    "tar": "^7.5.2",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "@anthropic-ai/sdk": "^0.71.1",
    "@github/copilot-sdk": "^0.1.23",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/electron": "^7.7.0",
    "@sentry/react": "^10.36.0",
    "@shikijs/cli": "^3.19.0",
    "@tailwindcss/typography": "^0.5.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "filtrex": "^3.1.0",
    "gray-matter": "^4.0.3",
    "jotai": "^2.16.0",
    "js-yaml": "^4.1.1",
    "linkify-it": "^5.0.0",
    "lucide-react": "^0.561.0",
    "marked": "^17.0.1",
    "markitdown-js": "^0.0.14",
    "open": "^11.0.0",
    "pdfjs-dist": "^5.4.624",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.6",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "semver": "^7.7.3",
    "shiki": "^3.19.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  }
}
